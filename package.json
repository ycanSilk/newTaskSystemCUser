{
  "name": "douyin-task-system",
  "version": "2.0.0",
  "description": "抖音评论派单系统 - H5移动端优先",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development next dev",
    "build": "cross-env NODE_ENV=production next build",
    "start": "cross-env NODE_ENV=production PORT=8890 node .next/standalone/server.js",
    "build:clean": "rimraf .next && cross-env NODE_ENV=production next build",
    "start:clean": "rimraf .next && cross-env NODE_ENV=production next build && cross-env NODE_ENV=production PORT=8890 node .next/standalone/server.js",
    "deploy": "npm run build:clean && npm run start",
    "deploy:test": "cross-env NODE_ENV=test PORT=8891 npm run build:clean && cross-env NODE_ENV=test PORT=8891 node .next/standalone/server.js",
    "deploy:prod": "cross-env NODE_ENV=production PORT=8890 npm run build:clean && cross-env NODE_ENV=production PORT=8890 node .next/standalone/server.js",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:next": "next lint",
    "type-check": "tsc --noEmit",
    "analyze": "cross-env ANALYZE=true npm run build",
    "predeploy": "npm run type-check && npm run lint"
  },
  "dependencies": {
    "@ant-design/icons": "^6.0.0",
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "antd": "^6.0.0",
    "axios": "^1.12.2",
    "clsx": "^2.0.0",
    "dayjs": "^1.11.19",
    "js-cookie": "^3.0.5",
    "jsonwebtoken": "^9.0.2",
    "next": "^14.2.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^2.2.0",
    "typescript": "^5.3.3",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.7",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "autoprefixer": "^10.4.16",
    "baseline-browser-mapping": "^2.8.32",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "eslint": "^9.0.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "postcss": "^8.4.32",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.3.6"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
